<div class="row justify-content-end">
  <div class="col-8"></div>
  <div class="col-4">  <a href="{{ path('sir.add_instrument') }}">  <span  class="btn btn-success"><i class="fas fa-plus"></i> Add New Questionnarie </span></a></div>
</div>
<div class="content">
{%if content.instruments is not empty %}
<table class="table table-mobile-responsive table-mobile-striped">
  <thead class="teste">
    <tr>
        <th scope="col">Name</th>
        <th scope="col">Abbreviature</th>
        <th scope="col">Add Itens</th>
        <th scope="col">Edit</th>
        <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
 
    {% for instrument in content.instruments %}
        {{instrument}} 
    {% endfor %}  
 
 </tbody>
</table>
{% else %}
   <div>
     {{ 'No questionnaries were found' }}
    </div>
{% endif %}
</div>

